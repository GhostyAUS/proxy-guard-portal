
# Proxy settings
PROXY_PORT=8080
NGINX_CONFIG_PATH=/etc/nginx/nginx.conf

# Authentication settings
AUTH_TYPE=none
LDAP_SERVER=ldap.example.com
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# Client authentication (for proxy access)
CLIENT_AUTH_REQUIRED=false
CLIENT_AUTH_METHOD=none
CLIENT_AUTH_REALM=Proxy Access

# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Log and configuration file paths
LOG_FILE_PATH=/var/log/proxyguard/access.log
LOG_STATS_PATH=/var/log/proxyguard/stats.json
WHITELIST_CONFIG_PATH=/etc/proxyguard/whitelist.json
PROXY_SETTINGS_PATH=/etc/proxyguard/settings.json
